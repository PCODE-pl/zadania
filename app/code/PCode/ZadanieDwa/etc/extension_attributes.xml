<?xml version="1.0" encoding="UTF-8" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Api/etc/extension_attributes.xsd">
    <!-- no folding in XMLs -->

    <extension_attributes for="Magento\Quote\Api\Data\AddressInterface">
        <attribute code="note" type="string"/>
    </extension_attributes>

    <extension_attributes for="Magento\Sales\Api\Data\OrderInterface">
        <attribute code="note" type="PCode\ZadanieDwa\Api\Data\NoteInterface" >
            <join reference_table="pcode_note" join_on_field="entity_id" reference_field="order_id">
                <field column="quote_id">quote_id</field>
                <field column="order_id">order_id</field>
                <field column="note">note</field>
            </join>
        </attribute>
    </extension_attributes>
</config>
